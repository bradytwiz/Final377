<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header for the final Mad Lib story -->
        <TextView
            android:id="@+id/madlibHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Mad Lib Story"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <!-- TextView to display the final mad lib story -->
        <!-- HTML tags are used to color "silly" and "awesome" in red -->
        <TextView
            android:id="@+id/madlibStoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="this is a silly madlib example to demonstrate how awesome this project will be." />

    </LinearLayout>

</ScrollView>
